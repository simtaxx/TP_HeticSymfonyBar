{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{ title }}</h5>
        <p class="card-text">
          Page d'accueil
        </p>
      </div>
    </div>
  </div>
  {% for beer in beers %}
    <div class="col-sm-4">
      <div class="card card__beers">
        <div class="card-body">
          <a href="{{ path('beer', { 'id' : beer.id }) }}" class="card-title">{{ beer.name }}</a>
          <p>{{ beer.description }}</p>
          <img class="img-fluid" src="{{ asset('build/images/beer_00.jpg') }}" />
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
